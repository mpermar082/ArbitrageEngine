{
  // Configuration for TypeScript compiler
  "compilerOptions": {
    // Target ECMAScript version for compilation
    "target": "ES2020",
    // Module system to use for compilation
    "module": "commonjs",
    // Output directory for compiled files
    "outDir": "./dist",
    // Root directory for source files
    "rootDir": "./src",
    // Enable strict type checking
    "strict": true,
    // Enable interoperability between CommonJS and ES modules
    "esModuleInterop": true,
    // Skip checking of external libraries
    "skipLibCheck": true,
    // Enforce consistent casing in file names
    "forceConsistentCasingInFileNames": true,
    // Allow importing JSON files as modules
    "resolveJsonModule": true,
    // Generate declaration files
    "declaration": true,
    // Generate source maps
    "sourceMap": true,
    // Generate declaration map files
    "declarationMap": true,
    // Source map locations
    "sourceRoot": "./src" // Added source map locations
  },
  // Include all files in the src directory and its subdirectories
  "include": ["src/**/*"],
  // Exclude node_modules, dist, and test files from compilation
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}